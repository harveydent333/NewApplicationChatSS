@model NewApplicationChatSS.Models.RegisterModel 

<head>
    <link rel="stylesheet" type="text/css" href="~/css/RegisterPage.css">
</head>
<body>
    <br>
    <div id="login">
        <h3 class="text-center text-white pt-5">Регистрация нового пользователя</h3>
        <div class="container">
            <div style="color: white" asp-validation-summary="All"></div>
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                            @using (Html.BeginForm("Register", "Account", FormMethod.Post, htmlAttributes: new {@class="form", @id="login-form" }))
                            {
                                <h3 class="text-center text-info">Регистрация</h3>
                                <div class="form-group">
                                    <label asp-for="UserName" class="text-info">Имя пользователя:</label><br>
                                    <input type="text" asp-for="UserName" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label asp-for="Email" class="text-info">E-Mail:</label><br>
                                    <input type="text" asp-for="Email" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password" class="text-info">Пароль:</label><br>
                                    <input type="password" asp-for="Password" class="form-control">
                                    <label asp-for="PasswordConfirm" class="text-info">Пароль:</label><br>
                                    <input type="password" asp-for="PasswordConfirm" class="form-control">
                                </div>
                                <div class="form-group">
                                    <input type="submit" name="submit" class="btn btn-info btn-md" value="Отправить">
                                    <input asp-for="IsLocked" type="hidden" value="false" />
                                </div>
                            }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
